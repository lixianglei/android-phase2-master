<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.ge.med.mobile.nursing.ui.activity.IPSheZhiActivity">
    <include layout="@layout/biao_ti_lan_item"/>
    <TextView
        android:text="服务器IP"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:textSize="14sp"
        android:textColor="#cecece"
        android:layout_width="match_parent"
        android:layout_marginBottom="-5dp"
        android:layout_height="45dp" />
    <EditText
        android:id="@+id/ip_tv"
        android:digits="0123456789."
        android:hint="请输入服务器IP"
        android:imeOptions="actionDone"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:textColorHint="#9b9b9b"
        android:background="@drawable/shezhi_tv_shape"
        android:layout_width="match_parent"
        android:layout_height="55dp" />
    <TextView
        android:text="端口"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:textSize="14sp"
        android:textColor="#cecece"
        android:layout_width="match_parent"
        android:layout_marginBottom="-5dp"
        android:layout_height="45dp" />
    <EditText
        android:id="@+id/duankouhao_tv"
       android:digits="0123456789."
        android:hint="请输入端口号"
        android:imeOptions="actionDone"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:textColorHint="#9b9b9b"
        android:background="@drawable/shezhi_tv_shape"
        android:layout_width="match_parent"
        android:layout_height="55dp" />
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <Button
          android:id="@+id/queren_bt"
          android:layout_width="match_parent"
          android:layout_height="55dp"
          android:layout_alignParentBottom="true"
          android:layout_marginBottom="10dp"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp"
          android:textSize="20sp"
          android:background="@drawable/login_bt_slt"
          android:text="确认"
          android:textColor="#fff" />
  </RelativeLayout>
</LinearLayout>
