<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#888"
    tools:context="com.ge.med.mobile.nursing.ui.activity.HD_YZActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <include layout="@layout/biao_ti_lan_item"/>
        <ImageView
            android:layout_above="@+id/hd_yz_que_ren_bt"
            android:id="@+id/hedui_saoma_imgv"
            android:src="@mipmap/erweimatupian"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:paddingBottom="80dp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_height="0dp" />
        <GridView
            android:layout_marginTop="10dp"
            android:layout_above="@+id/hd_yz_que_ren_bt"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/jiao_ban_gv"
            android:horizontalSpacing="5dp"
            android:verticalSpacing="8dp"
            android:layout_width="match_parent"
            android:numColumns="3"
            android:layout_weight="1"
            android:layout_height="0dp"></GridView>

        <Button
            android:id="@+id/hd_yz_que_ren_bt"
            android:layout_width="match_parent"
            android:text="开始核对"
            android:textSize="20sp"
            android:background="@drawable/ti_zheng_duo_ren_bt_selater1"
            android:textColor="#fff"
            android:layout_alignParentBottom="true"
            android:layout_height="50dp" />
    </LinearLayout>
    <TextView
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp"
        android:id="@+id/hedui_saoma_tv"
        android:text="扫描患者条形码跳转医嘱"
        android:textSize="14sp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<include layout="@layout/fragment_shai_xuan_include"/>
</RelativeLayout>
