<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#888"
>
    <TextView
    android:id="@+id/yz_hd_lx_sj_tv"
    android:layout_below="@+id/yz_hd_lx_zhanweizhi"
    android:text="2016/10/13"
    android:textColor="#fff"
    android:textSize="20sp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="45dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="#888"
        android:id="@+id/hz_yz_frag_lv_item_rl">
    <TextView
        android:id="@+id/hz_yz_frag_lv_bg_tv"
        android:background="@drawable/login_edt_shape"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="60dp"
        android:layout_width="match_parent"
        android:layout_height="85dp" />
    <TextView
        android:id="@+id/hz_yz_frag_lv_sj_tv"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_width="60dp"
        android:text="17:00"
        android:layout_height="85dp" />
    <TextView
        android:id="@+id/hz_yz_frag_lv_bt_tv"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:gravity="center"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginRight="45dp"
        android:layout_width="wrap_content"
        android:text="口服药"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/hz_yz_frag_lv_beizhu"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:textColor="#9b9b9b"
        android:gravity="center"
        android:layout_below="@+id/hz_yz_frag_lv_bt_tv"
        android:layout_width="wrap_content"
        android:text="宋喆："
        android:layout_height="wrap_content" />

    <TextView
    android:id="@+id/hz_yz_frag_lv_shuangren1"
    android:layout_marginTop="8dp"
    android:textSize="14sp"
    android:textColor="#9b9b9b"
    android:gravity="center"
    android:layout_toRightOf="@+id/hz_yz_frag_lv_beizhu"
    android:layout_below="@+id/hz_yz_frag_lv_bt_tv"
    android:layout_width="wrap_content"
    android:text=" 已取消 2016/10/26 16:25"
    android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/hz_yz_frag_lv_xian_tv"
        android:background="#88dddddd"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/hz_yz_zhuangtai_imgv"
/>

    <LinearLayout
        android:id="@+id/hz_yz_pg_ll"
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/hz_yz_frag_lv_bt_tv">

    </LinearLayout>

    <TextView
        android:id="@+id/hz_yz_zhuangtai_tv"
        android:text="未执行"
        android:textColor="#559bec"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hz_yz_frag_lv_xian_tv"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
       />
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/hz_yz_pg_tv1"
        android:layout_width="22dp"
        android:layout_height="16dp"
        android:background="@drawable/sy_hljb_pg_shape_1"
        android:gravity="center"
        android:text="@string/diedao"
        android:textColor="#adadad"
        android:textSize="12sp"
        android:layout_marginLeft="72dp"
        android:layout_below="@+id/hz_yz_frag_lv_xian_tv" />
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/hz_yz_pg_tv3"
        android:layout_width="22dp"
        android:layout_height="16dp"
        android:background="@drawable/sy_hljb_pg_shape_1"
        android:gravity="center"
        android:text="@string/diedao"
        android:textColor="#adadad"
        android:textSize="12sp"
        android:layout_below="@+id/hz_yz_frag_lv_xian_tv"
        android:layout_centerHorizontal="true" />


    <CheckBox
        android:id="@+id/yz_shuxue_xuanzhong_check_box"
        android:button="@null"
        android:clickable="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/jiao_ban_xuan_ze_selector"
        android:layout_width="match_parent"
        android:layout_height="85dp" />

    <TextView
        android:id="@+id/yz_shuxue_xuanzhong_check_tv"
        android:visibility="gone"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/yz_hd_miao_bian_shape"
        android:layout_width="match_parent"
        android:layout_height="85dp" />
    <ImageView
        android:id="@+id/hz_yz_zhuangtai_imgv"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:src="@mipmap/icon_stop"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>