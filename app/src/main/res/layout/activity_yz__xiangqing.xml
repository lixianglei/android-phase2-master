<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#888"
    tools:context="com.ge.med.mobile.nursing.ui.activity.YZ_HD_RenActivity">
    <TextView
        android:background="@drawable/login_edt_shape1"
        android:layout_width="match_parent"
        android:layout_height="195dp" />
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_above="@+id/yz_hd_ren_bt_ll"
        android:layout_height="match_parent">
        <include layout="@layout/biao_ti_lan_item"/>
        <include layout="@layout/yi_zhu_tou_tiao_mu_include"/>
        <include layout="@layout/yizhu_xiangqing_include"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/yz_hd_ren_bt_ll"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <Button
            android:id="@+id/yz_xhixing_fenci_bt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:text="分次"
            android:visibility="gone"
            android:background="@drawable/ti_zheng_duo_ren_bt_selater"
            android:layout_marginRight="1dp"
            android:layout_height="match_parent"
            android:textColor="@color/abc_secondary_text_material_light" />

        <Button
            android:id="@+id/yz_hd_ren_yichang_bt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:text="异常"
            android:background="@drawable/ti_zheng_duo_ren_bt_selater"
            android:layout_marginRight="1dp"
            android:layout_height="match_parent"
            android:textColor="@color/abc_secondary_text_material_light" />

        <Button
            android:id="@+id/yz_hd_ren_tijiao_bt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/ti_zheng_duo_ren_bt_selater1"
            android:textColor="#fff"
            android:textSize="18sp"
            android:text="提交"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>
