<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9b9b9b"
    xmlns:bandroid="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.ge.med.mobile.nursing.ui.fragment.TZFragment">
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_marginTop="10dp"
        android:id="@+id/sy_tongzhi_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_below="@+id/sy_hljb_ll"
        android:layout_height="match_parent" >
    <ListView
        android:id="@+id/tz_lv"
        android:layout_marginTop="10dp"
        android:divider="#00aaaaaa"
        android:dividerHeight="5dp"
        android:drawSelectorOnTop="true"
        bandroid:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
