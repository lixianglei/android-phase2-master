<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.ge.med.mobile.nursing.ui.activity.TXFSActivity">
    <include layout="@layout/biao_ti_lan_item"/>

    <LinearLayout
        android:background="@drawable/shezhi_tv_shape"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="声音"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:textColor="#9b9b9b"
            android:gravity="center_vertical"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="55dp" />
        <CheckBox
            android:button="@drawable/shezhi_kaiguan_selt"
            android:background="@null"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txfs_sy_switch" />
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/shezhi_tv_shape"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="震动"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:textColor="#9b9b9b"
            android:gravity="center_vertical"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="55dp" />

        <CheckBox
            android:button="@drawable/shezhi_kaiguan_selt"
            android:background="@null"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txfs_zd_switch" />
    </LinearLayout>
</LinearLayout>
