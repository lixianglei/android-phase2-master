<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#888"
    tools:context="com.ge.med.mobile.nursing.ui.activity.YZ_ZX_ShuYe_DiSuActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_above="@+id/yz_zx_kou_fu_yao_ll"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/biao_ti_lan_item"/>
        <include layout="@layout/yi_zhu_tou_tiao_mu_include"/>
        <TextView
            android:id="@+id/drtz_sj_imgv"
            android:gravity="center"
            android:background="@null"
            android:text="滴速/实入量"
            android:textColor="#fff"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>
        <include layout="@layout/ti_zheng_xiaojianpan_include"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/yz_zx_kou_fu_yao_ll"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#ccc"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/yz_shuxue_beizhu_bt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/ti_zheng_duo_ren_bt_selater"
            android:text="备注"
            android:layout_height="50dp"
            android:textColor="@color/abc_secondary_text_material_light" />
        <Button
            android:id="@+id/yz_shuxue_yichang_bt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/ti_zheng_duo_ren_bt_selater"
            android:text="异常"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_height="50dp"
            android:textColor="@color/abc_secondary_text_material_light" />

        <Button
            android:id="@+id/yz_shuxue_wancheng_bt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#fff"
            android:background="@drawable/ti_zheng_duo_ren_bt_selater1"
            android:text="保存滴速"
            android:layout_height="50dp" />
        <Button
            android:id="@+id/yz_shuxue_shiruliang_bt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#fff"
            android:visibility="gone"
            android:background="@drawable/ti_zheng_duo_ren_bt_selater1"
            android:text="保存实入量"
            android:layout_height="50dp" />
        <Button
            android:id="@+id/yz_shuxue_huanye_next_bt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#fff"
            android:visibility="gone"
            android:background="@drawable/ti_zheng_duo_ren_bt_selater1"
            android:text="下一步"
            android:layout_height="50dp" />
        <Button
            android:id="@+id/yz_shuxue_wancheng_xunshi_bt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#fff"
            android:visibility="gone"
            android:background="@drawable/ti_zheng_duo_ren_bt_selater1"
            android:text="完成巡视"
            android:layout_height="50dp" />
    </LinearLayout>
</RelativeLayout>
