<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pain_number_keyboard_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/ti_zheng_zhi"
    android:layout_marginTop="5dp"
    android:background="#fff"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:visibility="visible"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/row_bt_ll_2"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="#ddd"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_pain_2_1"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@drawable/ti_zheng_xiaojianpan_bt_selater"
            android:text="1"
            android:textColor="#5f5f5f"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_pain_2_2"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@drawable/ti_zheng_xiaojianpan_bt_selater"
            android:text="2"
            android:textColor="#5f5f5f"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_pain_2_3"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@drawable/ti_zheng_xiaojianpan_bt_selater"
            android:text="3"
            android:textColor="#5f5f5f"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_pain_2_4"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@drawable/ti_zheng_xiaojianpan_bt_selater"
            android:text="."
            android:textColor="#5f5f5f"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_bt_ll_3"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="#ddd"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_pain_3_1"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@drawable/ti_zheng_xiaojianpan_bt_selater"
            android:text="4"
            android:textColor="#5f5f5f"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_pain_3_2"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@drawable/ti_zheng_xiaojianpan_bt_selater"
            android:text="5"
            android:textColor="#5f5f5f"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_pain_3_3"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@drawable/ti_zheng_xiaojianpan_bt_selater"
            android:text="6"
            android:textColor="#5f5f5f"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_pain_3_4"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@drawable/ti_zheng_xiaojianpan_bt_selater"
            android:text="0"
            android:textColor="#5f5f5f"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_bt_ll_4"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="#ddd"
        android:paddingBottom="1dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_pain_4_1"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@drawable/ti_zheng_xiaojianpan_bt_selater"
            android:text="7"
            android:textColor="#5f5f5f"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_pain_4_2"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@drawable/ti_zheng_xiaojianpan_bt_selater"
            android:text="8"
            android:textColor="#5f5f5f"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_pain_4_3"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@drawable/ti_zheng_xiaojianpan_bt_selater"
            android:text="9"
            android:textColor="#5f5f5f"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/bt_pain_4_4"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@drawable/ti_zheng_xiaojianpan_bt_selater"
            android:src="@mipmap/icon_delete"
            android:textColor="#5f5f5f" />

    </LinearLayout>

</LinearLayout>