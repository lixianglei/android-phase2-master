<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#8f000000"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/bg_tv"
    android:layout_width="match_parent"
   android:layout_marginTop="180dp"
    android:gravity="center"
    android:text="复温             分钟后提醒"
    android:textSize="20sp"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:background="@drawable/login_edt_shape"
    android:layout_height="120dp" />
    <Button
        android:id="@+id/queren_anniu_bt"
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:text="确认"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/bg_tv"
        android:layout_marginTop="-20dp"
        android:background="@drawable/ti_zheng_duo_ren_bt_selater1"
        android:layout_height="45dp" />
    <TextView
        android:layout_marginLeft="120dp"
        android:layout_marginTop="250dp"
        android:textSize="20sp"
        android:background="#000"
        android:layout_width="65dp"
        android:layout_height="1dp" />
    <EditText
        android:id="@+id/fuwen_edt"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="220dp"
        android:textSize="22sp"
        android:text="14"
        android:maxLength="3"
        android:inputType="number"
        android:gravity="center"
        android:background="@null"
        android:layout_width="65dp"
        android:layout_height="35dp" />
</RelativeLayout>