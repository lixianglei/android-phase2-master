<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/time_controls"
    android:background="#fff"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:gravity="center"
        android:paddingBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/shi_jian_nian_yue_ri_tv"
        android:background="@drawable/shijian_shape"
        android:layout_width="270dp"
        android:layout_centerHorizontal="true"
        android:text="2016/10/25"
        android:textSize="28sp"
        android:gravity="center_vertical"
        android:paddingLeft="40dp"
        android:layout_height="50dp" />
    <ImageButton
        android:layout_width="wrap_content"
        android:background="@null"
        android:layout_toRightOf="@+id/shi_jian_nian_yue_ri_tv"
       android:layout_marginLeft="-50dp"
        android:layout_marginBottom="8sp"
       android:layout_alignBottom="@+id/shi_jian_nian_yue_ri_tv"
        android:src="@mipmap/sj_qian"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton" />
    <TextView
        android:id="@+id/shi_jian_shi_tv"
        android:layout_below="@+id/shi_jian_nian_yue_ri_tv"
        android:background="@drawable/shijian_shape"
        android:layout_width="80dp"
        android:text="14"
        android:layout_marginTop="25dp"
        android:layout_alignLeft="@+id/shi_jian_nian_yue_ri_tv"
        android:textSize="28sp"
        android:gravity="center"
        android:layout_height="50dp" />
    <ImageButton
        android:id="@+id/shi_jian_shang_btimgv"
        android:background="@drawable/ti_zheng_duo_ren_bt_selater4"
        android:layout_width="70dp"
        android:text="14"
        android:textSize="28sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginLeft="-1dp"
        android:layout_height="50dp"
        android:src="@mipmap/sj_shang"
        android:layout_alignTop="@+id/shi_jian_shi_tv"
        android:layout_toRightOf="@+id/shi_jian_shi_tv"
        android:layout_toEndOf="@+id/shi_jian_shi_tv" />
    <ImageButton
        android:id="@+id/shi_jian_xia_btimgv"
        android:background="@drawable/ti_zheng_duo_ren_bt_selater4"
        android:layout_width="70dp"
        android:text="14"
        android:textSize="28sp"
        android:gravity="center"
        android:layout_marginLeft="-1dp"
        android:textStyle="bold"
        android:layout_height="50dp"
        android:src="@mipmap/sj_xia"
        android:layout_alignTop="@+id/shi_jian_shang_btimgv"
        android:layout_toRightOf="@+id/shi_jian_shang_btimgv"
        android:layout_toEndOf="@+id/shi_jian_shang_btimgv" />
<TextView
    android:text="点"
    android:textSize="30sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/shi_jian_xia_btimgv"
    android:layout_alignRight="@+id/shi_jian_nian_yue_ri_tv"
    android:layout_alignEnd="@+id/shi_jian_nian_yue_ri_tv"
    android:layout_marginTop="8dp"
    android:id="@+id/textView" />





    <TextView
        android:id="@+id/shi_jian_fen_tv"
        android:layout_below="@+id/shi_jian_shi_tv"
        android:background="@drawable/shijian_shape"
        android:layout_width="80dp"
        android:text="14"
        android:layout_marginTop="25dp"
        android:layout_alignLeft="@+id/shi_jian_nian_yue_ri_tv"
        android:textSize="28sp"
        android:gravity="center"
        android:layout_height="50dp" />
    <ImageButton
        android:id="@+id/shi_jian_fen_shang_btimgv"
        android:background="@drawable/ti_zheng_duo_ren_bt_selater4"
        android:layout_width="70dp"
        android:text="14"
        android:textSize="28sp"
        android:layout_marginLeft="-1dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_height="50dp"
        android:src="@mipmap/sj_shang"
        android:layout_alignTop="@+id/shi_jian_fen_tv"
        android:layout_toRightOf="@+id/shi_jian_fen_tv"
        android:layout_toEndOf="@+id/shi_jian_fen_tv" />
    <ImageButton
        android:id="@+id/shi_jian_fen_xia_btimgv"
        android:background="@drawable/ti_zheng_duo_ren_bt_selater4"
        android:layout_width="70dp"
        android:text="14"
        android:textSize="28sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginLeft="-1dp"
        android:layout_height="50dp"
        android:src="@mipmap/sj_xia"
        android:layout_alignTop="@+id/shi_jian_fen_shang_btimgv"
        android:layout_toRightOf="@+id/shi_jian_fen_shang_btimgv"
        android:layout_toEndOf="@+id/shi_jian_fen_shang_btimgv" />
    <TextView
        android:text="分"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/shi_jian_fen_xia_btimgv"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="6dp" />
    </RelativeLayout>
</RelativeLayout>