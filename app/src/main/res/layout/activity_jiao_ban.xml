<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#888"
    tools:context="com.ge.med.mobile.nursing.ui.activity.JiaoBanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/biao_ti_lan_item" />

        <GridView
            android:layout_marginTop="10dp"
            android:id="@+id/jiao_ban_gv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/jiao_ban_que_ren_bt"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:horizontalSpacing="5dp"
            android:numColumns="3"
            android:verticalSpacing="8dp"></GridView>

        <Button
            android:id="@+id/jiao_ban_que_ren_bt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ti_zheng_duo_ren_bt_selater1"
            android:text="开始交班记录"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

    <include layout="@layout/fragment_shai_xuan_include" />
</RelativeLayout>
